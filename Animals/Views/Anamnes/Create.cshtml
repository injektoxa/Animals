@model Animals.Models.Anamne

@{
    ViewBag.Title = "Добавить";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Анамнес</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">

            <div class="form-group">
                <label class="control-label col-md-2">Текст</label>
                <div class="col-md-10">
                   @Html.TextAreaFor(c => c.Text, new { style = "width:600px;height:400px" })
                    @Html.ValidationMessageFor(model => model.Text)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Добавть" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к питомцу", "Details", "Pets", new { id = @ViewBag.PetId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
